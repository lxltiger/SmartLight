<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="group"
            type="com.example.ledwisdom1.home.entity.Group" />

        <variable
            name="handler"
            type="com.example.ledwisdom1.CallBack" />

        <variable
            name="isSetting"
            type="boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:background="@drawable/icon_back"
                android:onClick="@{handler::handleClick}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设置"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="@drawable/icon_ok"
                android:onClick="@{handler::handleClick}" />

        </android.support.v7.widget.Toolbar>

        <com.mcxtzhang.swipemenulib.SwipeMenuLayout
            android:id="@+id/swipeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:swipeEnable="false">

            <RelativeLayout
                android:id="@+id/rl_group"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:onClick="@{handler::handleClick}">


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    app:imageUrl="@{group.icon}"
                    tools:background="@drawable/icon_light" />

                <TextView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    tools:text="@string/unsettting"
                    android:text='@{isSetting?@string/setting:@string/unsettting}' />

                <TextView
                    android:id="@+id/tv_name_mac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/iv_icon"
                    android:layout_toStartOf="@+id/iv_status"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.5"
                    android:lines="2"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text='@{group.name}'
                    tools:text="nzhng" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>

            <Button
                android:id="@+id/edit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="@string/title_main_compile"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#FF00"
                android:text="@string/delete"
                android:textColor="@android:color/white" />

        </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    </LinearLayout>



</layout>
